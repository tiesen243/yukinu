{
  "$schema": "./node_modules/turbo/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "dependsOn": ["^clean"],
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "interactive": true
    },
    "db:migrate": {
      "cache": false,
      "interactive": true
    },
    "db:push": {
      "cache": false,
      "interactive": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "outputLogs": "new-only"
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_APP_NAME",
    "NEXT_PUBLIC_WEB_URL",
    "NEXT_PUBLIC_DASHBOARD_URL",
    "NEXT_PUBLIC_TRPC_USE_STREAMING",

    "VITE_APP_NAME",
    "VITE_WEB_URL",
    "VITE_DASHBOARD_URL",
    "VITE_TRPC_USE_STREAMING",

    "POSTGRES_HOST",
    "POSTGRES_PORT",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DATABASE",
    "POSTGRES_SSL_MODE",

    "AUTH_SECRET",
    "AUTH_FACEBOOK_ID",
    "AUTH_FACEBOOK_SECRET",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",

    "RESEND_TOKEN",
    "UPLOADTHING_TOKEN",

    "PORT"
  ],
  "globalPassThroughEnv": [
    "CI",
    "MODE",
    "NODE_ENV",
    "SKIP_ENV_VALIDATION",

    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_PROJECT_PRODUCTION_URL",

    "NEON_PROJECT_ID",
    "DATABASE_URL",
    "DATABASE_URL_UNPOOLED",

    "POSTGRES_URL",
    "POSTGRES_URL_NO_SSL",
    "POSTGRES_PRISMA_URL",
    "POSTGRES_URL_NON_POOLING",

    "PGHOST",
    "PGHOST_UNPOOLED",
    "PGUSER",
    "PGPASSWORD",
    "PGDATABASE",

    "npm_lifecycle_event"
  ]
}
