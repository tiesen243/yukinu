{
  "name": "yukinu",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules out",
    "clean:workspaces": "turbo run clean",
    "db:generate": "turbo run db:generate -F @yukinu/db",
    "db:migrate": "turbo run db:migrate -F @yukinu/db",
    "db:push": "turbo run db:push -F @yukinu/db",
    "db:studio": "turbo run db:studio -F @yukinu/db",
    "deps:bump": "bunx npm-check-updates --deep -u && bun install",
    "deps:sort": "bunx sort-package-json **/**/package.json",
    "dev": "turbo dev --continue",
    "format": "turbo run format --continue -- --cache --cache-location .cache/prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/prettiercache",
    "postinstall": "bun run lint:ws",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/eslintcache",
    "lint:ws": "bunx sherif@latest",
    "prepare": "husky",
    "start:db": "docker compose -f ./docker-compose.yml up db -d",
    "start:dev": "docker compose -f ./docker-compose.yml up -d",
    "start:prod": "docker compose -f ./docker-compose.prod.yml up -d",
    "stop:db": "docker compose -f ./docker-compose.yml down db",
    "stop:dev": "docker compose -f ./docker-compose.yml down",
    "stop:prod": "docker compose -f ./docker-compose.prod.yml down",
    "typecheck": "turbo run typecheck"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "bun run format:fix",
      "git add --all"
    ],
    "*.{js,jsx,ts,tsx}": [
      "bun run lint:fix",
      "git add --all"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.1"
  },
  "packageManager": "bun@1.3.0",
  "catalog": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@tanstack/react-query": "^5.90.11",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "nuqs": "^2.8.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tsdown": "^0.16.7",
    "typescript": "^5.9.3"
  },
  "catalogs": {
    "react": {
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3",
      "react": "^19.2.0",
      "react-dom": "^19.2.0"
    },
    "tailwind": {
      "@tailwindcss/postcss": "^4.1.17",
      "@tailwindcss/vite": "^4.1.17",
      "tailwindcss": "^4.1.17"
    },
    "trpc": {
      "@trpc/server": "^11.7.2",
      "@trpc/client": "^11.7.2",
      "@trpc/tanstack-react-query": "^11.7.2",
      "superjson": "^2.2.5"
    }
  }
}
