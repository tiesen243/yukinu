{
  "name": "yukinu",
  "private": true,
  "homepage": "https://yukinu.vercel.app",
  "bugs": {
    "url": "https://github.com/tiesen243/yukinu/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiesen243/yukinu.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules out",
    "clean:workspaces": "turbo run clean",
    "db:generate": "turbo run db:generate -F @yukinu/db",
    "db:migrate": "turbo run db:migrate -F @yukinu/db",
    "db:push": "turbo run db:push -F @yukinu/db",
    "db:studio": "turbo run db:studio -F @yukinu/db",
    "deps:bump": "bunx npm-check-updates --deep -u && bun install",
    "deps:sort": "bunx sort-package-json **/**/package.json",
    "dev": "turbo dev --continue",
    "format": "oxfmt --check",
    "format:fix": "oxfmt --write",
    "postinstall": "bun run lint:ws",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "lint:ws": "bunx sherif@latest",
    "start:db": "docker compose -f ./docker-compose.yml up db -d",
    "start:dev": "docker compose -f ./docker-compose.yml up -d",
    "start:prod": "docker compose -f ./docker-compose.prod.yml up -d",
    "stop:db": "docker compose -f ./docker-compose.yml down db",
    "stop:dev": "docker compose -f ./docker-compose.yml down",
    "stop:prod": "docker compose -f ./docker-compose.prod.yml down",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "turbo": "^2.7.2"
  },
  "packageManager": "bun@1.3.0",
  "catalogs": {
    "prod": {
      "@tanstack/react-query": "^5.90.12",
      "nuqs": "^2.8.6",
      "zod": "^4.2.1"
    },
    "dev": {
      "@types/node": "^25.0.3",
      "dotenv-cli": "^11.0.0",
      "tsdown": "^0.18.3",
      "typescript": "^5.9.3"
    },
    "react": {
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3",
      "next": "^16.1.1",
      "react": "^19.2.3",
      "react-dom": "^19.2.3"
    },
    "tailwind": {
      "@tailwindcss/postcss": "^4.1.18",
      "@tailwindcss/vite": "^4.1.18",
      "tailwindcss": "^4.1.18"
    },
    "trpc": {
      "@trpc/server": "^11.8.1",
      "@trpc/client": "^11.8.1",
      "@trpc/tanstack-react-query": "^11.8.1",
      "superjson": "^2.2.6"
    },
    "orpc": {
      "@orpc/server": "^1.13.1",
      "@orpc/client": "^1.13.1",
      "@orpc/react-query": "^1.13.1"
    }
  }
}
