{
  "name": "yukinu",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tools/*"
    ],
    "catalog": {
      "@types/node": "^24.6.2",
      "dotenv-cli": "^10.0.0",
      "eslint": "^9.36.0",
      "prettier": "^3.6.2",
      "typescript": "^5.9.3"
    },
    "catalogs": {
      "react": {
        "@types/react": "^19.2.0",
        "@types/react-dom": "^19.2.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
      },
      "tailwind": {
        "@tailwindcss/postcss": "^4.1.14",
        "@tailwindcss/vite": "^4.1.14",
        "tailwindcss": "^4.1.14"
      },
      "api": {
        "@tanstack/react-query": "^5.90.2",
        "@trpc/server": "^11.6.0",
        "@trpc/client": "^11.6.0",
        "@trpc/tanstack-react-query": "^11.6.0",
        "superjson": "^2.2.2"
      }
    }
  },
  "scripts": {
    "build": "turbo run build",
    "bump-deps": "bunx npm-check-updates --deep -u && bun install",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:generate": "turbo run db:generate -F @yukinu/db",
    "db:migrate": "turbo run db:migrate -F @yukinu/db",
    "db:push": "turbo run db:push -F @yukinu/db",
    "db:studio": "turbo run db:studio -F @yukinu/db",
    "dev": "turbo dev --continue",
    "format": "turbo run format --continue -- --cache --cache-location .cache/prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/prettiercache",
    "postinstall": "bun run lint:ws",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/eslintcache",
    "lint:ws": "bunx sherif@latest",
    "typecheck": "turbo run typecheck"
  },
  "prettier": "@yukinu/prettier-config",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@turbo/gen": "^2.5.8",
    "@yukinu/prettier-config": "workspace:*",
    "@yukinu/tsconfig": "workspace:*",
    "turbo": "^2.5.8"
  },
  "packageManager": "bun@1.2.23",
  "engines": {
    "bun": ">=1.2.23",
    "node": ">=22.0.0"
  }
}
