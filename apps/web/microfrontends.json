{
  "$schema": "https://openapi.vercel.sh/microfrontends.json",
  "applications": {
    "yukinu-web": {
      "packageName": "@yukinu/web",
      "development": { "local": 3000, "fallback": "yukinu.vercel.app" }
    },
    "yukinu-dashboard": {
      "packageName": "@yukinu/dashboard",
      "routing": [{ "paths": ["/dashboard", "/dashboard/:path*"] }],
      "development": {
        "local": 3001,
        "fallback": "yukinu-dashboard.vercel.app"
      }
    }
  }
}
