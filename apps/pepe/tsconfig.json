{
  "extends": "@yuki/tsconfig/react.json",
  "compilerOptions": {
    "types": ["node", "vite/client"],
    "rootDirs": [".", "./.react-router/types"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@react-router/types/*": [
        ".react-router/types/src/+types/*",
        ".react-router/types/src/routes/+types/*"
      ]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".react-router/types/**/*"],
  "exclude": ["build", "node_modules"]
}
